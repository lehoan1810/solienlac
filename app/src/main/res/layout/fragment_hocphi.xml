<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:text="Học Phí"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <androidx.fragment.app.FragmentContainerView-->
    <!--        android:id="@+id/fragment_namhoc"-->
    <!--        android:name="com.hoanle.solienlaccc.namhoc.dsnamhoc"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/listViewThongBao"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.0"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/textView4"-->
    <!--        app:layout_constraintVertical_bias="0.155" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:text="Năm:"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/edtNam"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="#E5E5E5"
            android:focusable="false"
            android:inputType="none"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.3"
            android:text="HK:"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp" />

        <EditText
            android:text=""
            android:id="@+id/edtHocki"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:focusable="false"
            android:inputType="none"
            android:textAlignment="center"
            android:background="#E5E5E5"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewHocPhi"
        android:layout_width="347dp"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_hpTotal"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Tổng tiền: " />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_hpThu"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Đã Đóng: " />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_hpNo"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Còn Nợ: " />
</androidx.appcompat.widget.LinearLayoutCompat>